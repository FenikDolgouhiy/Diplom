<Window x:Class="Dashboard1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dashboard1"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:MetroChart="clr-namespace:De.TorstenMandelkow.MetroChart;assembly=De.TorstenMandelkow.MetroChart"
        mc:Ignorable="d" Height="600" Width="1024" 
        ResizeMode="CanResizeWithGrip" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" SizeToContent="WidthAndHeight" MinWidth="1024" MinHeight="600">

    <Window.Resources>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Grid x:Name="GridMain" Grid.Column="1" Grid.Row="1" Background="#FFCFCFCF">
            
            <!--<Grid Height="80" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10 0">
                    <Button Uid="0" Width="150" Content="СПЕЦИАЛЬНОСТИ" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF2A6AAA" Click="Button_Click" FontSize="12"/>
                    <Button Uid="1" Width="150" Content="ГРУППЫ" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF2A6AAA" Click="Button_Click" FontSize="12"/>
                    <Button Uid="2" Width="150" Content="ПРЕДМЕТЫ" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF2A6AAA" Click="Button_Click" FontSize="12"/>
                    <Button Uid="3" Width="150" Content="АУДИТОРИИ" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF2A6AAA" Click="Button_Click" FontSize="12"/>
                    <Button Uid="4" Width="150" Content="ПРЕПОДАВАТЕЛИ" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF2A6AAA" Click="Button_Click" FontSize="12"/>
                </StackPanel>
                <Grid x:Name="GridCursor" Width="150" Height="5" Background="#FF2196F3" HorizontalAlignment="Left" Margin="10 0"/>
            </Grid>
            <Grid x:Name="GridMainSecond" Background="Gray" Margin="0,80,0,0">

            </Grid>-->
        </Grid>

        <Grid Grid.Row="1" Background="#B26193BD">
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.Effect>
                <DropShadowEffect BlurRadius="20" Color="#FFDEDEDE" RenderingBias="Quality" ShadowDepth="1"/>
            </Grid.Effect>

            <Grid Grid.Row="0" Background="#FF2A6AAA">
                <Image Source="pack://application:/occt.png" Height="80" VerticalAlignment="Top" Margin="0,10"></Image>
                <TextBlock Text="ОККТ ОДЭКУ" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10" FontFamily="WS Simple Gallifreyan" Foreground="White" FontSize="16"/>
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="20" Color="#FF5D87B0" RenderingBias="Quality" ShadowDepth="1"/>
                </Grid.Effect>
            </Grid>

            <StackPanel Grid.Row="1">
                <Button Uid="0" Margin="0,15" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click_MainMenu">
                    <Grid Width="180">
                        <materialDesign:PackIcon Kind="CalendarText"  VerticalAlignment="Center"/>
                        <TextBlock  HorizontalAlignment="Center" Text="РОЗКЛАД" FontFamily="Palatino Linotype" FontWeight="Normal"/>
                    </Grid>
                </Button>

                <Button Uid="1" Margin="0,10" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click_MainMenu">
                    <Grid Width="180">
                        <materialDesign:PackIcon Kind="CalendarClock" VerticalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" Text="ЗМІНИ" FontFamily="Palatino Linotype"/>
                    </Grid>
                </Button>

                <Button Uid="3" Margin="0,10" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click_MainMenu">
                    <Grid Width="180">
                        <materialDesign:PackIcon Kind="ContentPaste" VerticalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" Text="НАВАНТАЖЕННЯ" FontFamily="Palatino Linotype"/>
                    </Grid>
                </Button>

                <Button Uid="4" Margin="0,10" BorderBrush="{x:Null}" Background="{x:Null}" Click="Button_Click_MainMenu">
                    <Grid Width="180">
                        <materialDesign:PackIcon Kind="FormatListNumbers"  VerticalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" Text="СПИСКИ" FontFamily="Palatino Linotype"/>
                    </Grid>
                </Button>

                <Button Uid="5" Margin="0,50" BorderBrush="{x:Null}" Background="{x:Null}" Height="Auto" Grid.Row="1" Click="Button_Click_MainMenu">
                    <Grid Width="180">
                        <materialDesign:PackIcon Kind="CloudDownload" VerticalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" Text="ЗАГРУЗИТЬ" FontFamily="Palatino Linotype"/>
                    </Grid>
                </Button>
            </StackPanel>
        </Grid>

        <Grid x:Name="GridBarraTitulo" Grid.ColumnSpan="2" Background="#FF124272" MouseDown="GridBarraTitulo_MouseDown">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="20" Color="#FF5D87B0" RenderingBias="Quality" ShadowDepth="1"/>
            </Grid.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0">
                <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Width="25" Height="25" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="WindowMinimize_Click">
                    <materialDesign:PackIcon Kind="WindowMinimize"/>
                </Button>
                <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Width="25" Height="25" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="WindowMaximize_Click">
                    <materialDesign:PackIcon Kind="WindowMaximize"/>
                </Button>
                <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Width="25" Height="25" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="WindowClose_Click">
                    <materialDesign:PackIcon Kind="WindowClose"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
